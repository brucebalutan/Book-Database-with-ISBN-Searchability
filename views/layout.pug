//- Defines doctype
doctype html
//- Defines top level html
html
  //- Start head
  head
    //- Define title and import stylesheet
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', integrity='sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyO8vHQn5NkNAdL+6zB/r5a4NqdJFCpf')
    style
      include ../stylesheets/style.css
  
  //- Use include for partial template
  include partials/navbar
  br

  //- Block to be overriden when inherited
  body
    block content
  br
  br

//- Import JQuery and main.js
script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
script(type='text/javascript', src="/js/main.js")


